{
  "name": "@mds-core/mds-policy-service",
  "version": "0.1.4",
  "description": "Mobility Data Specification Policy Service",
  "keywords": [
    "mds",
    "policy"
  ],
  "license": "Apache-2.0",
  "author": "City of Los Angeles",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "start": "pnpm watch server",
    "pretest": "pnpm typeorm -- schema:drop",
    "test": "DOTENV_CONFIG_PATH=../../.env jest",
    "ts-node": "DOTENV_CONFIG_PATH=../../.env node --experimental-repl-await -r ts-node/register -r dotenv/config",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "watch": "pnpm build && nodemon --watch '../../packages' --ext 'ts' --ignore '*.d.ts' --exec pnpm ts-node --"
  },
  "dependencies": {
    "@mds-core/mds-repository": "0.1.4",
    "@mds-core/mds-rpc-common": "0.1.4",
    "@mds-core/mds-schema-validators": "0.1.6",
    "@mds-core/mds-service-helpers": "0.1.4",
    "@mds-core/mds-types": "0.2.1",
    "@mds-core/mds-utils": "0.1.30",
    "joi": "17.4.0",
    "typeorm": "0.2.34"
  },
  "devDependencies": {
    "@mds-core/mds-test-data": "0.1.30"
  }
}
